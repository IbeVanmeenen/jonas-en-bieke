{
    "showErrorNotifications": true,

    "vars": {
        "distPath": "assets/",
        "resourcesPath": "app/"
    },

    "html": "<=resourcesPath>index.html",
    "scss": "<=resourcesPath>scss/**/*.scss",
    "img": "<=resourcesPath>img/**/*.{png,jpg,jpeg,gif,svg,webp}",
    "sound": "<=resourcesPath>sound/*.mp3",
    "video": "<=resourcesPath>video/*.mp4",

    "js": {
        "vendors": [
            "<=bowerComponentsPath>"
        ],
        "app": [
            "<=resourcesPath>js/_scope.js",
            "<=resourcesPath>js/components/*.js",
            "<=resourcesPath>js/app.js"
        ],
        "worker": "<=resourcesPath>js/worker.js"
    },

    "dist": {
        "css": "<=distPath>css/",
        "js": "<=distPath>js/",
        "img": "<=distPath>img/",
        "sound": "<=distPath>sound/",
        "video": "<=distPath>video/"
    },

    "browserSupport": [
        "last 2 versions",
        "ie 9-11",
        "ios 6"
    ],

    "liveReloadFiles": [
        "<=distPath>css/style.min.css",
        "<=distPath>js/*.js",
        "<=distPath>*.html"
    ]
}
